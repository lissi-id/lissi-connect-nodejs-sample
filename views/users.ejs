<!DOCTYPE html>
<!-- in views/users.ejs -->
<html>
  <head>
    <title>User Details</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="content">
      <h1>Welcome <em><%= name %></em></h1>
      <br />

      <p>Here are your user details:</p>
      
      <p>
        <% Object.keys(user).forEach(function(item) { %>
          <b><%- item %></b>: <%- user[item] %>
          <br />
        <% }); %>
      </p>

      <form action="/logout">
        <input type="submit" value="Logout">
      </form>
    </div>
  </body>
</html>